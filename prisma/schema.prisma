generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  name         String?
  passwordHash String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  isProMember  Boolean @default(false)

  clients    Client[]
  attentions Attention[]

  sessions Session[]
}

model Client {
  id     String       @id @default(cuid())
  name   String
  email  String?
  status ClientStatus @default(ACTIVE)

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  attentions Attention[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  totalBilled     Int       @default(0)
  totalPaid       Int       @default(0)
  lastContactedAt DateTime?

  @@index([userId, name])
}

model Attention {
  id       String        @id @default(cuid())
  type     AttentionType
  priority Priority      @default(MEDIUM)

  title       String
  description String?

  amount       Int?
  dueDate      DateTime?
  lastActionAt DateTime?
  nextActionAt DateTime?
  updatedAt    DateTime  @updatedAt

  status AttentionStatus @default(OPEN)

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  clientId String
  client   Client @relation(fields: [clientId], references: [id], onDelete: Cascade)

  createdAt   DateTime  @default(now())
  completedAt DateTime?

  currency   String? @default("INR")
  paidAmount Int? // partial payments
  isPaid     Boolean @default(false)
  invoiceNo  String?

  @@index([userId, status, dueDate])
  @@index([clientId, status])
  @@index([userId, type, status])
}

model Session {
  id String @id @default(cuid())

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  expiresAt DateTime
  revokedAt DateTime?
  createdAt DateTime  @default(now())

  userAgent String?
  ipAddress String?

  refreshTokens RefreshToken[]

  @@index([userId])
}

model RefreshToken {
  id String @id @default(cuid())

  sessionId String
  session   Session @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  hashedToken String
  createdAt   DateTime  @default(now())
  revokedAt   DateTime?

  @@unique([hashedToken])
  @@index([sessionId])
}

enum ClientStatus {
  ACTIVE
  PAUSED
  COMPLETED
}

enum AttentionType {
  FOLLOW_UP
  INVOICE
  DEADLINE
}

enum Priority {
  LOW
  MEDIUM
  HIGH
}

enum AttentionStatus {
  OPEN
  COMPLETED
  SNOOZED
}
